{
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-go-template"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ]
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "fs-extra": "^11.1.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npmlog": "^7.0.1",
    "prettier": "^3.0.0",
    "prettier-eslint": "^16.3.0",
    "prettier-plugin-go-template": "^0.0.15"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "bootstrap": "^5.3.2",
    "boxicons": "^2.1.4",
    "cleave.js": "^1.6.0",
    "imagesloaded": "^5.0.0",
    "img-comparison-slider": "^8.0.1",
    "jarallax": "^2.1.4",
    "lightgallery": "^2.7.2",
    "nouislider": "^15.7.1",
    "parallax-js": "^3.1.0",
    "prismjs": "^1.29.0",
    "rellax": "^1.12.1",
    "shufflejs": "^6.1.0",
    "smooth-scroll": "^16.1.3",
    "swiper": "^8.4.7",
    "vanilla-tilt": "^1.8.1"
  },
  "scripts": {
    "dev": "hugo server --gc --disableFastRender --navigateToChanged --ignoreCache",
    "build": "hugo --verbose --gc --minify --cleanDestinationDir",
    "renderToDisk": "npm run dev -- --renderToDisk",
    "renderToDisk:production": "npm run renderToDisk -- --minify --environment production",
    "vendor": "node build/vendor.js"
  },
  "lint-staged": {
    "assets/js/*.js": "eslint --cache --fix",
    "assets/*.{js,css,md}": "prettier --write"
  }
}
